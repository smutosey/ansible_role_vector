data_dir: "{{ vector_data_dir }}"

api:
  enabled: true
  address: "0.0.0.0:8686"

sources:
  var_logs:
    type: "file"
    include:
      - "/var/log/*.log"
    ignore_older: 86400          # 1 day

sinks:
  debug:
    type: console
    inputs:
      - var_logs
    encoding:
      codec: json

